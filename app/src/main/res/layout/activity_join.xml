<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join">


    <fragment
        android:id="@+id/DISTANCEMAP"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/m1000button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1,000m"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/LISTbutton"
        app:layout_constraintEnd_toStartOf="@+id/m700button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/m500button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="500m"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/LISTbutton"
        app:layout_constraintEnd_toStartOf="@+id/m300button"
        app:layout_constraintStart_toEndOf="@+id/m700button" />

    <Button
        android:id="@+id/m300button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="300m"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/LISTbutton"
        app:layout_constraintEnd_toStartOf="@+id/m100button"
        app:layout_constraintStart_toEndOf="@+id/m500button" />

    <Button
        android:id="@+id/m100button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100m"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/LISTbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/m300button" />

    <Button
        android:id="@+id/m700button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="700m"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/LISTbutton"
        app:layout_constraintEnd_toStartOf="@+id/m500button"
        app:layout_constraintStart_toEndOf="@+id/m1000button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        android:text="거리 별 노선"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/m1000button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LISTbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        android:text="리스트로 보기"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CreateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:text="노선 생성하기"
        android:textSize="12pt"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DISTANCEMAP" />

</androidx.constraintlayout.widget.ConstraintLayout>